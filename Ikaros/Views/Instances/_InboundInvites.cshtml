@model IEnumerable<Genxyz.Models.InboundInvites>

<div class="indexSubHeader"></div>
<table class="table instanceTable">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstanceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sender)
        </th>
        <th>
           @Html.DisplayNameFor(model=> model.DateSent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstanceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSent)
            </td>
                <td>
                    <span class="replyInvite btn btn-success" data-value="@item.InviteID" data-accept="true"><span class="fa fa-check"></span></span>
                    <span class="replyInvite btn btn-danger" data-value="@item.InviteID" data-accept="false"><span class="fa fa-close"></span></span>
                </td>
        </tr>
    }
</table>