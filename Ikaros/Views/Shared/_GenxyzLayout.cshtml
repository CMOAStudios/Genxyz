<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Genxyz</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/Genxyz/css")
    @Scripts.Render("~/scripts/three.min.js")
    @Scripts.Render("~/scripts/Tween.js")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
    <link href='https://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Economica' rel='stylesheet' type='text/css'>

</head>
<body>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/general.js")
    @Scripts.Render("~/scripts/genxyz.js")
    @Scripts.Render("~/scripts/genxyzNS.js")
    @Scripts.Render("~/scripts/genxyzGfx.js")
    @Scripts.Render("~/scripts/genxyzUI.js")
    @Scripts.Render("~/scripts/genxyzControls.js")
    @Scripts.Render("~/scripts/genxyzContext.js")
    @Scripts.Render("~/scripts/genxyzTheme.js")
    @RenderSection("scripts", required: false)
</body>
</html>
